{
    "version": "1.0",
    "entities": [
      { "name": "contract_id",          "type": "string",  "pattern": "^[A-Z0-9]{6,}$", "example": "HD123456", "description": "Loan contract number (SO_HOP_DONG)." },
      { "name": "customer_id",          "type": "number",  "example": 34567,           "description": "Primary customer numeric ID." },
      { "name": "los_cif_no",           "type": "string",  "example": "LOS000987",     "description": "LOS CIF number" },
      { "name": "lms_cif_no",           "type": "string",  "example": "LMS001122",     "description": "LMS CIF number" },
      { "name": "loan_id",              "type": "string",  "example": "LD_NO=00001",   "description": "Unique loan key (LD_NO/LD_DI_NO pair)." },
      { "name": "date",                 "type": "date",    "format": "YYYY-MM-DD",     "example": "2025-06-15", "description": "Single calendar date." },
      { "name": "date_from",            "type": "date",    "format": "YYYY-MM-DD",     "example": "2025-01-01", "description": "Start of a date range." },
      { "name": "date_to",              "type": "date",    "format": "YYYY-MM-DD",     "example": "2025-06-30", "description": "End of a date range." },
      { "name": "date_range",           "type": "object",  "fields": ["date_from","date_to"], "example": {"date_from":"2025-01-01","date_to":"2025-06-30"}, "description": "Inclusive date window." },
      { "name": "amount",               "type": "number",  "unit": "VND",              "example": 10000000,     "description": "Monetary value." },
      { "name": "currency",             "type": "string",  "enum": ["VND","USD"],      "example": "VND",        "description": "Currency code." },
      { "name": "percentage_rate",      "type": "number",  "range": [0,100],           "example": 5.5,          "description": "Interest / fee percentage." },
      { "name": "loan_status",          "type": "string",  "enum": ["active","paid_off","overdue"], "example": "active", "description": "Current loan state." },
      { "name": "loan_product",         "type": "string",  "example": "Unsecured Consumer", "description": "Product or package name." },
      { "name": "interest_rate_type",   "type": "string",  "enum": ["fixed","variable"], "example": "fixed", "description": "Fixed vs variable rate." },
      { "name": "loan_officer_id",      "type": "string",  "example": "EMP0012",       "description": "Assigned officer code." },
      { "name": "installment_no",       "type": "integer", "example": 5,               "description": "Nth repayment schedule line." },
      { "name": "payment_id",           "type": "string",  "example": "PMT7890",       "description": "Unique payment transaction ID." },
      { "name": "days_overdue",         "type": "integer", "example": 7,               "description": "Current DPD (days past due)." },
      { "name": "period_months",        "type": "integer", "example": 24,              "description": "Loan tenor in months." },
      { "name": "period_years",         "type": "integer", "example": 2,               "description": "Loan tenor in years." },
      { "name": "fee_type",             "type": "string",  "enum": ["origination","late","early_repay"], "example": "late", "description": "Fee category." },
      { "name": "policy_article",       "type": "string",  "example": "Article 12",    "description": "Policy article reference for RAG snippets." },
      { "name": "policy_clause",        "type": "string",  "example": "Clause 3",      "description": "Policy clause reference." },
      { "name": "officer_phone",        "type": "string",  "pattern": "^0\\d{8,10}$",  "example": "0912345678", "description": "Contact phone of loan officer." },
      { "name": "officer_email",        "type": "string",  "format": "email",          "example": "support@bank.vn", "description": "Contact email." },
      { "name": "address",              "type": "string",  "example": "123 Le Loi, Dist 1", "description": "Free-form postal address." },
      { "name": "loan_type",            "type": "string",  "enum": ["secured","unsecured"], "example": "unsecured", "description": "Secured vs unsecured." },
      { "name": "overdue_flag",         "type": "boolean", "example": true,            "description": "Boolean ‘is overdue?’ convenience flag." },
      { "name": "bucket_code",          "type": "string",  "example": "B2",            "description": "Collection bucket per DPD mapping." },
      { "name": "stage_code",           "type": "string",  "example": "STG01",         "description": "Debt-collection stage code." },
      { "name": "group_code",           "type": "string",  "example": "GRP_SOFTCALL",  "description": "Allocated collector group." },
      { "name": "user_code",            "type": "string",  "example": "COLL0123",      "description": "Allocated collector user code." },
      { "name": "language",             "type": "string",  "enum": ["vi","en"],        "example": "vi",          "description": "Preferred answer language." }
    ]
  }
  